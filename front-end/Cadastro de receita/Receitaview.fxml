<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="TOP_CENTER" maxHeight="320.0" maxWidth="380.0" prefHeight="590" prefWidth="380" spacing="12" styleClass="cbf-popup-container" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1">

    <stylesheets>
        <URL value="@style.css" />
    </stylesheets>

    <padding>
        <Insets bottom="15" left="15" right="15" top="15" />
    </padding>

    <HBox alignment="CENTER_LEFT" spacing="8" styleClass="header-box">
        <Label styleClass="cbf-popup-title" text="Cadastro da Receita" />
        <Region HBox.hgrow="ALWAYS" />
        <Button styleClass="cbf-popup-btn-close" text="✕" />
    </HBox>

    <VBox spacing="5" alignment="CENTER_LEFT">
        <Label styleClass="cbf-popup-label" text="Data da Receita" />
        <TextField styleClass="cbf-popup-field" />
    </VBox>

    <VBox spacing="5" alignment="CENTER_LEFT">
        <Label styleClass="cbf-popup-label" text="Valor da Receita" />
        <TextField styleClass="cbf-popup-field" />
    </VBox>

    <VBox spacing="5" alignment="CENTER_LEFT">
        <Label styleClass="cbf-popup-label" text="Fonte da Receita" />
        <TextField styleClass="cbf-popup-field" />
    </VBox>

    <VBox spacing="5" alignment="CENTER_LEFT">
        <Label styleClass="cbf-popup-label" text="IRPJ" />
        <TextField styleClass="cbf-popup-field" />
    </VBox>

   
    <HBox alignment="CENTER" spacing="15" styleClass="button-box">
        <Button styleClass="cbf-popup-btn-save" text="Salvar Alterações" />
        <Button styleClass="cbf-popup-btn-cancel" text="Cancelar" />
    </HBox>

</VBox>
