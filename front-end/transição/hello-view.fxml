<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane fx:id="anchorPane" prefHeight="720.0" prefWidth="1280.0" styleClass="cbf-background" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.ativ12.arbitros.HelloController">

    <VBox spacing="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
        <HBox fx:id="topBar" alignment="CENTER_LEFT" prefHeight="60.0" prefWidth="1280.0" styleClass="top-bar">
            <Label styleClass="top-bar-title" text="⚽ TRANSAÇÕES" textOverrun="CLIP">
            <font>
               <Font name="System Bold" size="24.0" />
            </font></Label>
        </HBox>

    </VBox>

    <!-- Campo de busca e botões superiores -->
    <TextField fx:id="txtPesquisar" layoutX="14.0" layoutY="80.0" prefWidth="300.0" promptText="🔍 Pesquisar..." AnchorPane.leftAnchor="14.0" AnchorPane.topAnchor="80.0" />

    <!-- Conteúdo principal abaixo do cabeçalho -->
    <VBox layoutX="20.0" layoutY="137.0" prefHeight="583.0" prefWidth="1240.0" spacing="20" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="137.0">

        <!-- Tabela -->
        <TableView fx:id="tabelaTransacoes" prefHeight="438.0" prefWidth="1240.0" styleClass="cbf-tabela">
            <columns>
                <TableColumn fx:id="colTransacaoId" prefWidth="350.0" text="ID" />
                <TableColumn fx:id="colTransacaoData" prefWidth="450.0" text="Data" />
                <TableColumn fx:id="colTransacaoValor" prefWidth="400.0" text="Valor" />
                <TableColumn fx:id="colTransacaoDestinatario" prefWidth="350.0" text="Destinatario" />
                <TableColumn fx:id="colTransacaoRemetente" prefWidth="350.0" text="Remetente" />
                <TableColumn fx:id="colTransacaoDescricao" prefWidth="350.0" text="Descrição" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>

        <!-- Botões -->
        <HBox alignment="CENTER_RIGHT" spacing="10">
            <Button fx:id="btnNova" styleClass="cbf-botao" text="Nova Transação" />
            <Button fx:id="btnEditar" styleClass="cbf-botao" text="Editar" />
            <Button fx:id="btnRemover" styleClass="cbf-botao" text="Remover" />
            <Button fx:id="btnBuscar" styleClass="cbf-botao" text="Buscar" />
        </HBox>

    </VBox>

</AnchorPane>
