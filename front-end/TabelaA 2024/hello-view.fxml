<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane stylesheets="@style.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.tabela.HelloController">

    <top>
        <HBox alignment="CENTER" spacing="15" styleClass="header-box">
            <ImageView fitHeight="40" fitWidth="40" preserveRatio="true" />
            <Label styleClass="title-label" text="CAMPEONATO BRASILEIRO 2024 - SÉRIE A" />
        </HBox>
    </top>

    <center>
        <TableView fx:id="tabelaClassificacao" styleClass="tabela-classificacao">
            <columns>
                <TableColumn fx:id="colPosicao" minWidth="50" styleClass="coluna-posicao" text="POS" />
                <TableColumn fx:id="colEscudo" minWidth="40" text="">
                    <cellValueFactory>
                        <PropertyValueFactory property="escudo" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="colTime" minWidth="180" styleClass="coluna-time" text="TIME" />
                <TableColumn fx:id="colPontos" minWidth="50" styleClass="coluna-pontos" text="PTS" />
                <TableColumn fx:id="colJogos" minWidth="40" text="J" />
                <TableColumn fx:id="colVitorias" minWidth="40" text="V" />
                <TableColumn fx:id="colEmpates" minWidth="40" text="E" />
                <TableColumn fx:id="colDerrotas" minWidth="40" text="D" />
                <TableColumn fx:id="colGolsPro" minWidth="50" text="GP" />
                <TableColumn fx:id="colGolsContra" minWidth="50" text="GC" />
                <TableColumn fx:id="colSaldoGols" minWidth="50" text="SG" />
                <TableColumn fx:id="colAproveitamento" minWidth="60" text="APR%" />
                <TableColumn fx:id="colUltimosJogos" minWidth="1000" text="ÚLTIMOS 5" />
            </columns>
        </TableView>
    </center>

    <bottom>
        <VBox alignment="CENTER" spacing="10" styleClass="footer-box">
            <HBox alignment="CENTER" spacing="20">
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <Label style="-fx-font-weight: bold;" text="CLASSIFICAÇÃO:" />
                    <Label styleClass="posicao-libertadores" text="Libertadores" />
                    <Label styleClass="posicao-rebaixamento" text="Rebaixamento" />
                </HBox>
                <Label styleClass="update-label" text="Última atualização: --/--/----" />
                <Button onAction="#handleAtualizar" styleClass="update-button" text="ATUALIZAR" />
            </HBox>
            <Label style="-fx-font-size: 11px; -fx-text-fill: #666666;" text="Dados oficiais da CBF - Confederação Brasileira de Futebol" />
        </VBox>
    </bottom>
</BorderPane>
