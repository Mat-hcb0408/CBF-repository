<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="720.0" prefWidth="1280.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.projetinho.HelloController">

    <top>
        <HBox alignment="CENTER" spacing="15" styleClass="header-box">
            <ImageView fitHeight="40" fitWidth="40" preserveRatio="true" />
            <Label styleClass="title-label" text="CAMPEONATO BRASILEIRO 2023 - SÉRIE B" />
        </HBox>
    </top>

    <center>
        <TableView fx:id="tabelaClassificacao" styleClass="tabela-classificacao">
            <columns>
                <TableColumn fx:id="colPosicao" minWidth="44.0" prefWidth="66.0" styleClass="coluna-posicao" text="POS" />
                <TableColumn fx:id="colTime" minWidth="121.0" prefWidth="197.0" styleClass="coluna-time" text="TIME" />
                <TableColumn fx:id="colPontos" minWidth="47.0" prefWidth="66.0" styleClass="coluna-pontos" text="PTS" />
                <TableColumn fx:id="colJogos" minWidth="40" prefWidth="84.0" text="J" />
                <TableColumn fx:id="colVitorias" minWidth="40" prefWidth="66.0" text="V" />
                <TableColumn fx:id="colEmpates" minWidth="40" prefWidth="72.0" text="E" />
                <TableColumn fx:id="colDerrotas" minWidth="40" prefWidth="66.0" text="D" />
                <TableColumn fx:id="colGolsPro" minWidth="50" prefWidth="66.0" text="GP" />
                <TableColumn fx:id="colGolsContra" minWidth="50" prefWidth="66.0" text="GC" />
                <TableColumn fx:id="colSaldoGols" minWidth="50" prefWidth="66.0" text="SG" />
                <TableColumn fx:id="colAproveitamento" minWidth="60" prefWidth="488.0" text="Ultimas 5" />
                <TableColumn fx:id="colUltimosJogos" minWidth="707.0" prefWidth="707.0" text="ÚLTIMOS 5" />
            </columns>
        </TableView>
    </center>

    <bottom>
        <VBox alignment="CENTER" spacing="10" styleClass="footer-box">
            <HBox alignment="CENTER" spacing="20">
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <Label style="-fx-font-weight: bold;" />
                    <Label styleClass="posicao-libertadores" text="Promoção" />
                    <Label styleClass="posicao-rebaixamento" text="Rebaixamento" />
                </HBox>
                <Label styleClass="update-label" text="Última atualização: --/--/----" />
                <Button onAction="#handleAtualizar" styleClass="update-button" text="ATUALIZAR" />
            </HBox>
            <Label style="-fx-font-size: 11px; -fx-text-fill: #666666;" text="Dados oficiais da CBF - Confederação Brasileira de Futebol" />
        </VBox>
    </bottom>
</BorderPane>
