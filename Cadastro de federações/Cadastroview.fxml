<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="TOP_CENTER" maxWidth="500.0" minHeight="400.0" minWidth="500.0" spacing="15" styleClass="cbf-container" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1">

    <stylesheets>
        <URL value="@style.css" />
    </stylesheets>

    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>
    
    <HBox alignment="CENTER" spacing="10">
        <Label styleClass="cbf-titulo" text="CADASTRO DE FEDERAÇÕES" />
    </HBox>

    <VBox prefHeight="200.0" prefWidth="100.0">
        <children>
            <HBox prefHeight="100.0" prefWidth="200.0" spacing="10">
                <children>

                    <Label styleClass="cbf-label" text="Nome da federação ">
                        <font>
                            <Font name="System Bold" size="12.0" />
                        </font>
                    </Label>
                    <TextField styleClass="cbf-field" />
                </children>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0" spacing="10">
                <children>

                    <Label styleClass="cbf-label" text="Sigla  " />
                    <TextField styleClass="cbf-field" />
                </children>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0" spacing="10">
                <children>

                    <Label styleClass="cbf-label" text="Estado " textFill="#f4f5e4" />
                    <TextField styleClass="cbf-field" />
                </children>
            </HBox>
        </children>
    </VBox>

    <HBox alignment="CENTER" spacing="15">
        <Button styleClass="cbf-btn-salvar" text="SALVAR" />
        <Button styleClass="cbf-btn-cancelar" text="CANCELAR" />
    </HBox>
</VBox>
