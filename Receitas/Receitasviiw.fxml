<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.projeto3.HelloController">

   <!-- Barra superior azul -->
   <Pane fx:id="topBar" prefHeight="60.0" style="-fx-background-color: blue;"
         AnchorPane.topAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
      <children>
         <Label layoutX="14.0" layoutY="13.0" text="RECEITAS CBF" textFill="WHITE">
            <font>
               <Font name="System Bold" size="24.0" />
            </font>
         </Label>
      </children>
   </Pane>

   <!-- Layout principal -->
   <HBox spacing="40.0" AnchorPane.topAnchor="80.0" AnchorPane.bottomAnchor="30.0"
         AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0">

      <!-- Seção de cadastro -->
      <VBox alignment="CENTER" spacing="20.0" HBox.hgrow="ALWAYS">
         <Label text="Receita nova? Cadastre o tipo, origem e valor abaixo">
            <font>
               <Font name="System Bold" size="18.0" />
            </font>
         </Label>
         <Button text="Cadastre-se" />
         <Label text="Busque receitas por origem ou por filtro específico">
            <font>
               <Font name="System Bold" size="18.0" />
            </font>
         </Label>
         <TextField promptText="Pesquisar" />
         <Label text="Filtrar por">
            <font>
               <Font name="System Bold" size="18.0" />
            </font>
         </Label>
         <ComboBox />
      </VBox>

      <!-- Tabela de receitas -->
      <VBox alignment="CENTER" spacing="20.0" HBox.hgrow="ALWAYS">
         <Label text="Veja abaixo a tabela de receitas organizadas por data e valor.">
            <font>
               <Font name="System Bold" size="16.0" />
            </font>
         </Label>
         <TableView fx:id="tabelaReceitas" VBox.vgrow="ALWAYS">
            <columns>
               <TableColumn text="ID-Receita" />
               <TableColumn text="Data" />
               <TableColumn text="Valor" />
               <TableColumn text="Tipo" />
               <TableColumn text="Origem" />
               <TableColumn text="Observações" />
            </columns>
            <columnResizePolicy>
               <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
         </TableView>
      </VBox>

   </HBox>

</AnchorPane>
