CREATE DATABASE tarde_bd_cbf;
USE tarde_bd_cbf;

-- Tabela Dividas
CREATE TABLE Dividas (
    idDivida INT AUTO_INCREMENT PRIMARY KEY,
    valorDivida DECIMAL(10, 2), -- Usando DECIMAL para maior precis√£o
    validade DATE,
    juros DECIMAL(5, 2),
    credor VARCHAR(50),
    fiador VARCHAR(50),
    tipoDeDivida VARCHAR(50),
    descricaoDivida VARCHAR(150)
);

-- Tabela Receitas
CREATE TABLE Receitas (
    idReceita INT AUTO_INCREMENT PRIMARY KEY,
    dataReceita DATE,
    valorReceita DECIMAL(10, 2),
    fonte VARCHAR(50),
    IRPJ DECIMAL(5, 2),
    descricaoReceita VARCHAR(150)
);

-- Tabela Transacoes
CREATE TABLE Transacoes (
    idTransacao INT AUTO_INCREMENT PRIMARY KEY,
    dataTransacao DATE,
    valorTransacao DECIMAL(10, 2),
    destinatarioTransacao VARCHAR(50),
    remetenteTransacao VARCHAR(50),
    descricaoTransacao VARCHAR(150)
);

-- Tabela Despesas
CREATE TABLE Despesas (
    idDespesa INT AUTO_INCREMENT PRIMARY KEY,
    dataDespesa DATE,
    valorDespesa DECIMAL(10, 2),
    destinatarioDespesa VARCHAR(50),
    remetenteDespesa VARCHAR(50),
    descricaoDespesa VARCHAR(150)
);

-- Tabela ContratosFinanceiros
CREATE TABLE ContratosFinanceiros (
    idContratoFinanceiro INT AUTO_INCREMENT PRIMARY KEY,
    inicioDeContrato DATE,
    encerramentoDeContrato DATE,
    associados VARCHAR(50),
    descricaoContrato VARCHAR(150)
);

-- Criar tabela Federacoes
CREATE TABLE Federacoes (
    idFederacao INT AUTO_INCREMENT PRIMARY KEY,
    nome_federacao VARCHAR(60),
    sigla_federacao VARCHAR(60),
    estado_federacao VARCHAR(60)
);

-- Criar tabela Clubes
CREATE TABLE Clubes (
    idClube INT AUTO_INCREMENT PRIMARY KEY,
    nome_clube VARCHAR(60),
    anoFundacao INT,
    estado VARCHAR(60),
    escudo BLOB, -- Usando BLOB para armazenar imagens
    idFederacao INT,
    FOREIGN KEY (idFederacao) REFERENCES Federacoes(idFederacao)
);

-- Criar tabela Atletas
CREATE TABLE Atletas (
    idAtleta INT AUTO_INCREMENT PRIMARY KEY,
    nome VARCHAR(60),
    dataNascimento DATE,
    apelido VARCHAR(60),
    numeracao INT
);

-- Criar tabela Arbitros
CREATE TABLE Arbitros (
    idArbitro INT AUTO_INCREMENT PRIMARY KEY,
    nome VARCHAR(60),
    idFederacao INT,
    FOREIGN KEY (idFederacao) REFERENCES Federacoes(idFederacao)
);

-- Criar tabela ContratosAtletas
CREATE TABLE ContratosAtletas (
    idContratoAtleta INT AUTO_INCREMENT PRIMARY KEY,
    dataInicio DATE,
    dataFim DATE,
    tipoContrato VARCHAR(60),
    ativo BOOLEAN, 
    idClube INT,
    idAtleta INT,
    FOREIGN KEY (idClube) REFERENCES Clubes(idClube),
    FOREIGN KEY (idAtleta) REFERENCES Atletas(idAtleta)
);
