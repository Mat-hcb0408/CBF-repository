<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx/11.0.14-internal"
            xmlns:fx="http://javafx.com/fxml/1"
            prefWidth="1280.0" prefHeight="720.0"
            styleClass="root"
            stylesheets="@home.css">

    <children>
        <VBox fx:id="mainVBox"
              spacing="20"
              alignment="TOP_CENTER"
              AnchorPane.topAnchor="0.0"
              AnchorPane.leftAnchor="0.0"
              AnchorPane.rightAnchor="0.0"
              AnchorPane.bottomAnchor="0.0"
              prefWidth="1280.0"
              prefHeight="720.0"
              maxWidth="Infinity"
              maxHeight="Infinity"
              style="-fx-padding: 20;">

            <!-- Barra superior -->
            <HBox alignment="CENTER_LEFT"
                  spacing="10"
                  styleClass="top-bar"
                  prefHeight="60"
                  maxWidth="Infinity">
                <Label fx:id="homeLabel" text="🏠 HOME" styleClass="top-title"/>
            </HBox>

            <!-- Grid de opções estilo PES -->
            <GridPane fx:id="menuGrid"
                      hgap="20"
                      vgap="20"
                      alignment="CENTER"
                      styleClass="menu-grid"
                      VBox.vgrow="ALWAYS">

                <columnConstraints>
                    <ColumnConstraints percentWidth="33"/>
                    <ColumnConstraints percentWidth="33"/>
                    <ColumnConstraints percentWidth="33"/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints percentHeight="50"/>
                    <RowConstraints percentHeight="50"/>
                </rowConstraints>

                <!-- Linha 1 -->
                <StackPane styleClass="menu-card" GridPane.rowIndex="0" GridPane.columnIndex="0">
                    <VBox alignment="CENTER" spacing="10">
                        <Label fx:id="transacoesLabel" text="📊 Transações" styleClass="menu-label"/>
                    </VBox>
                </StackPane>

                <StackPane styleClass="menu-card" GridPane.rowIndex="0" GridPane.columnIndex="1">
                    <VBox alignment="CENTER" spacing="10">
                        <Label fx:id="clubesAtletasLabel" text="🏃 Clubes e Atletas" styleClass="menu-label"/>
                    </VBox>
                </StackPane>

                <StackPane styleClass="menu-card" GridPane.rowIndex="0" GridPane.columnIndex="2">
                    <VBox alignment="CENTER" spacing="10">
                        <Label fx:id="contratosLabel" text="📑 Contratos" styleClass="menu-label"/>
                    </VBox>
                </StackPane>

                <!-- Linha 2 -->
                <StackPane styleClass="menu-card" GridPane.rowIndex="1" GridPane.columnIndex="0">
                    <VBox alignment="CENTER" spacing="10">
                        <Label fx:id="dividasDespesasLabel" text="💰 Dívidas &amp; Despesas" styleClass="menu-label"/>
                    </VBox>
                </StackPane>

                <StackPane styleClass="menu-card" GridPane.rowIndex="1" GridPane.columnIndex="1">
                    <VBox alignment="CENTER" spacing="10">
                        <Label fx:id="federacaoLabel" text="🏛 Federação" styleClass="menu-label"/>
                    </VBox>
                </StackPane>

                <StackPane styleClass="menu-card" GridPane.rowIndex="1" GridPane.columnIndex="2">
                    <VBox alignment="CENTER" spacing="10">
                        <Label fx:id="receitaLabel" text="📈 Receita" styleClass="menu-label"/>
                    </VBox>
                </StackPane>
            </GridPane>

            <!-- Rodapé: Próximos Jogos -->
            <VBox styleClass="footer"
                  prefHeight="180"
                  maxWidth="Infinity"
                  spacing="10"
                  alignment="TOP_LEFT">
                <Label fx:id="proximosJogosLabel" text="📅 Próximos Jogos" styleClass="footer-title"/>
                <Label fx:id="placeholderLabel" text=" " styleClass="footer-placeholder"/>
            </VBox>
        </VBox>
    </children>
</AnchorPane>
