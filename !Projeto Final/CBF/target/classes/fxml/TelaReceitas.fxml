<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="720.0" prefWidth="1280.0" stylesheets="@../css/styles.css" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.cbf.cbf.controller.TelaReceitasController">

    <!-- Barra superior -->
    <Pane fx:id="topBar" prefHeight="60.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <children>
            <HBox alignment="CENTER_LEFT" prefHeight="60.0" prefWidth="488.0">
                <children>
                    <Button fx:id="btnVoltar" minWidth="55.0" onAction="#handleVoltarAction" prefHeight="41.0" prefWidth="55.0" styleClass="btn-voltar">
                        <graphic>
                            <Label styleClass="icon-voltar" text="←" />
                        </graphic>
                    </Button>
                    <Label fx:id="lblTitulo" text="⚽ TRANSAÇÕES" textFill="WHITE">
                        <font>
                            <Font name="System Bold" size="24.0" />
                        </font>
                    </Label>
                </children>
            </HBox>
        </children>
    </Pane>

     <!-- Tabela de receitas -->
     <VBox layoutX="14.0" layoutY="120.0" prefHeight="590.0" prefWidth="1256.0" spacing="5.0">
         <Button fx:id="bttnCadastroReceitas" text="Cadastre" />
         <TableView fx:id="receitasTableView" VBox.vgrow="ALWAYS">
             <columns>
                 <TableColumn fx:id="colIdReceitas" text="ID Receita" />
                 <TableColumn fx:id="colDataReceitas" text="Data" />
                 <TableColumn fx:id="colValorReceitas" text="Valor" />
                 <TableColumn fx:id="colIrpjReceitas" prefWidth="51.0" text="IRPJ" />
                 <TableColumn fx:id="colFonteReceitas" prefWidth="79.0" text="Fonte" />
                 <TableColumn fx:id="colDescricaoReceitas" prefWidth="110.0" text="Descrição" />
             </columns>
             <columnResizePolicy>
                 <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
             </columnResizePolicy>
         </TableView>
     </VBox>
      <TextField fx:id="txtPesquisarReceitas" layoutX="14.0" layoutY="79.0" prefHeight="25.0" prefWidth="313.0" promptText="Pesquisar" />

</AnchorPane>
