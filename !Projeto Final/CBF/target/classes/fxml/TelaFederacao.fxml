<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane minHeight="720.0" minWidth="1280.0" prefHeight="720.0" prefWidth="1280.0" stylesheets="@../css/styles.css" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.cbf.cbf.controller.TelaFederacaoController">


    <!-- Barra superior -->
    <Pane fx:id="topBar" prefHeight="60.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <children>
            <HBox alignment="CENTER_LEFT" prefHeight="60.0" prefWidth="488.0">
                <children>
                    <Button fx:id="btnVoltar" minWidth="55.0" onAction="#handleVoltarAction" prefHeight="41.0" prefWidth="55.0" styleClass="btn-voltar">
                        <graphic>
                            <Label styleClass="icon-voltar" text="←" />
                        </graphic>
                    </Button>
                    <Label fx:id="lblTitulo" text="⚽ TRANSAÇÕES" textFill="WHITE">
                        <font>
                            <Font name="System Bold" size="24.0" />
                        </font>
                    </Label>
                </children>
            </HBox>
        </children>
    </Pane>

      
           <VBox spacing="20.0" AnchorPane.bottomAnchor="17.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="107.0">
         <Button fx:id="bttnCadastrar" prefWidth="160.0" styleClass="cbf-botao" text="Cadastrar" />
         <TableView fx:id="federacoesTableView" prefHeight="511.0" prefWidth="1240.0" styleClass="cbf-tabela" VBox.vgrow="ALWAYS">
             <columns>
                 <TableColumn fx:id="colId" prefWidth="150.0" text="ID da federação" />
                 <TableColumn fx:id="colNome" prefWidth="100.0" text="Nome da federação" />
                 <TableColumn fx:id="colSigla" text="Sigla" />
                 <TableColumn fx:id="colEstado" prefWidth="120.0" text="Estado" />
             </columns>
             <columnResizePolicy>
                 <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
             </columnResizePolicy>
         </TableView>
     </VBox>
       <TextField fx:id="txtPesquisar" layoutX="20.0" layoutY="71.0" prefHeight="29.0" prefWidth="384.0" promptText="Pesquisar federação..." AnchorPane.leftAnchor="20.0" AnchorPane.topAnchor="71.0" />

</AnchorPane>
